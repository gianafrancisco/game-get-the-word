<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="org.fransis.game.words.MainMenuFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal|center_vertical">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginBottom="10dp"
            android:text="@string/greeting_msg"
            android:layout_gravity="center_vertical|center_horizontal"
            android:id="@+id/text_greeting" />

        <Button
            android:id="@+id/btn_play"
            android:layout_width="200dp"
            android:background="@drawable/good"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="@string/start_game"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btn_resume"
            android:layout_width="200dp"
            android:background="@drawable/good"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="@string/resume_game"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btn_exit"
            android:layout_width="200dp"
            android:background="@drawable/wrong"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="30dp"
            android:text="@string/quit" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sign_in_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<!--
        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="200dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            />
-->
        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/google_button"
            android:text="@string/sign_in"
            android:layout_margin="10dp"
            android:textSize="12sp" />

        <Button
            android:id="@+id/sign_out_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/google_button"
            android:text="@string/sign_out"
            android:layout_margin="10dp"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>